    .controls
      %label.radio.inline
        %input#casual{name: "optionsRadios", type: "radio", value: "casual"}
          Casual User
      %label.radio.inline
        %input#power{name: "optionsRadios", type: "radio", value: "power"}
          Power User
        %a#basic-tooltip{"data-animation" => "false", "data-placement" => "right", "data-title" => "Different Type of Users", "data-toggle" => "tooltip", href: "#"} ?
