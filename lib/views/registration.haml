      #myModal.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
          %h3#myModalLabel Terms and Conditions
        .modal-body
          .media
            %a.pull-left{href: "#"}
              %img.media-object{alt: "Pic", src: "/images/terms.png"}/
            .media-body
              %h4.media-heading Media heading
              Terms and Condition
