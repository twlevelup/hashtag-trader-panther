%html
  %head
    = bootstrap_assets
  %body{:style => "background-image:url('../images/kitten3.jpg'); background-size:1366px 768px; width:100%; height:100%"}
    .navbar
      .navbar-inner
        .container
          / .btn-navbar is used as the toggle for collapsed navbar content
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          / Be sure to leave the brand out there if you want it shown
          %a.brand{href: "/"} #HashtagTrader Panther
          / Everything you want hidden at 940px or less, place within here
          .nav-collapse.collapse
            %ul.nav.pull-right
              -if session[:name]
                %li
                  %a{href: "/logout"} Logout
              - else
                %li
                  %a{href: "/auth/github"} Login        
  %br/ 

  %div{:style => "background: rgba(255, 255, 255, 0.8); border-radius:25px; max-width: 1000px; max-height: 1000px; width: 100%;"}/
  - container :fluid do
    - row do
      = yield

